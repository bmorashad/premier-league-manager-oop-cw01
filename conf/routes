# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
+nocsrf
POST 	/clients/:id 									controllers.HomeController.index(request: Request, id: String)
+nocsrf
POST 	/api/match 								controllers.MatchController.createMatch(request: Request)
GET 	/api/match 								controllers.MatchController.getAllMatches()
GET 	/api/footballclub 						controllers.FootballClubController.getAllFootballClubs()
GET 	/api/season 							controllers.PremierLeagueController.getSeason()
GET 	/assets/html/professional 				controllers.Assets.at(path="/public", file="html/index.html")
GET 	/app/html/professional						controllers.Assets.at(path="/public", file="html/index.html")
GET 	/app/html/u23						controllers.Assets.at(path="/public", file="html/index.html")
GET 	/app/html/u18						controllers.Assets.at(path="/public", file="html/index.html")


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /app/*file     controllers.Assets.versioned(path="/public", file: Asset)
# GET     /app/professional/*file     controllers.Assets.versioned(path="/public", file: Asset)
